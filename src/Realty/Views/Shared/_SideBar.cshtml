
@{
  var currentUser = ViewBag.CurrentUser;
  var isAuthenticated = ViewBag.CurrentUser != null;
}

<nav class="navbar-default navbar-static-side" role="navigation">
  <div class="sidebar-collapse">
    <ul class="nav metismenu" id="side-menu">
      <li class="nav-header">
        @if(isAuthenticated)
        {
          <div class="dropdown profile-element">
            <span>
              <img alt="image" class="img-circle" src="@($"/images/{currentUser.Person.Photo}")"/>
            </span>
            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
              <span class="clear">
                <span class="block m-t-xs">
                  <strong class="font-bold">@currentUser?.Person.ReversedFullName</strong>
                </span>
                <span class="text-muted text-xs block">@currentUser?.Login<b class="caret"></b></span>
              </span>
            </a>
            <ul class="dropdown-menu animated fadeInRight m-t-xs">
              <li><a href="#">Logout</a></li>
            </ul>
          </div>
        }
        <div class="logo-element">R</div>
      </li>

      @if(isAuthenticated)
      {
        <li>
          <a asp-controller="Users" asp-action="Index">
            <i class="fa fa-users"></i>
            <span class="nav-label">Users</span>
          </a>
        </li>
        <li>
          <a asp-controller="Properties" asp-action="Index">
            <i class="fa fa-bank"></i>
            <span class="nav-label">Properties</span>
          </a>
        </li>
        <li>
          <a asp-controller="Listings" asp-action="Index">
            <i class="fa fa-address-card-o"></i>
            <span class="nav-label">Listings</span>
          </a>
        </li>
        <li>
          <a asp-controller="Offers" asp-action="Index">
            <i class="fa fa-handshake-o"></i>
            <span class="nav-label">Offers</span>
          </a>
        </li>
        <li>
          <a asp-controller="Sales" asp-action="Index">
            <i class="fa fa-shopping-bag"></i>
            <span class="nav-label">Sales</span>
          </a>
        </li>
      }

    </ul>
  </div>
</nav>
